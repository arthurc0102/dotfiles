# Shell
shell-integration-features = no-cursor,no-title,sudo,ssh-env

# Theme / Style
theme = Snazzy Soft
cursor-style = underline
font-family = Cascadia Mono NF
font-size = 14

# Window
window-inherit-working-directory = false

# MacOS
macos-option-as-alt = true

# Keybindings
keybind = alt+left=unbind
